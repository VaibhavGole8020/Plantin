<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define the corner radius -->
    <corners
        android:radius="16dp" />

    <!-- Define the solid fill color -->
    <solid
        android:color="#8BC34A" /> <!-- Replace with your desired color -->

    <!-- Optional: Define stroke for the border -->
    <stroke
        android:width="2dp"
        android:color="#8BC34A" /> <!-- Replace with your desired color -->

    <!-- Optional: Define padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
